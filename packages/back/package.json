{
  "name": "@soft-skills/back",
  "version": "0.1.0",
  "private": true,
  "repository": "rigwild/soft-skills",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "tsc",
    "test": "ava --verbose",
    "dev": "nodemon",
    "start:dev": "node -r ts-node/register ./index.ts"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.6",
    "@types/supertest": "^2.0.9",
    "ava": "^3.8.1",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "./src"
    ],
    "exec": "npm run start:dev",
    "ext": "ts"
  }
}
